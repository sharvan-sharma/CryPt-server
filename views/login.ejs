<div class="container-fluid collapse show multi-collapse" id="login">
    <h1 class="display-4">
        <span class="bigC display-3">C</span>ryPt
        <span class="text-muted h2">signin</span>
    </h1>
    <p class="lead"><button type="button" data-toggle="collapse" data-target=".multi-collapse"
            style="background:inherit;border-style:none;">
            <i class="fa fa-angle-left fa-big" aria-hidden="true"></i>
        </button> Don't have an Account Signup here.
    </p>
    <form action="/login?<%= transaction_id %>" method="POST">
        <p>
            <input type="email" class="form-control form-control-lg" name="username" id="usernameLogin"
                placeholder="Email" required>
        </p>
        <p>
            <input type="password" class="form-control form-control-lg" name="password" id="passwordLogin"
                placeholder="Password" required>
            <button class="btn btn-link">Forgot password?</button>
        </p>
        <p>
            <button type="submit" class="btn btn-dark btn-lg btn-block">
                <span class="h6">Signin now</span></button>
            Don't have an account ? <a data-toggle="collapse" href=".multi-collapse">
                Signup</a> here
        </p>

    </form>
</div>